@model Project1.WebApp.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Details";
}


<div>
    <h4>Order Details</h4>
    <hr />

    @*@{Html.RenderPartial("PartialOrderHist", Model);}*@

    <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalPrice)
            </dd>
        </dl>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderedAt.Name)
            </dd>
        </dl>

        <dl class="row">
            <dt class="col-sm-2">
                Customer Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderedBy.FirstName)
                @Html.DisplayFor(model => model.OrderedBy.LastName)
            </dd>
        </dl>

    <b> @Html.DisplayNameFor(model => model.Address) </b>
    @{Html.RenderPartial("PartialAddress", Model.Address);}

    @* Display order items info *@
    @{Html.RenderPartial("PartialOrderItems", Model.OrderItems);}

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
